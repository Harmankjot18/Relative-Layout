<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Constraint_Layout">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guide_h_1"
        app:layout_constraintGuide_percent=".3">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_h_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".35">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guide_h_4"
        app:layout_constraintGuide_percent=".5">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v_1"
        app:layout_constraintGuide_percent=".2">

    </androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v_2"
        app:layout_constraintGuide_percent=".4">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v_3"
        app:layout_constraintGuide_percent=".6">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v_4"
        app:layout_constraintGuide_percent=".8">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v_5"
        app:layout_constraintGuide_percent=".33">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v_6"
        app:layout_constraintGuide_percent=".69">

    </androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guide_h_2"
        app:layout_constraintGuide_percent=".6">

    </androidx.constraintlayout.widget.Guideline>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/img_1">

    </ImageView>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img1"
        android:src="@drawable/img"
        android:layout_marginLeft="50dp">

    </ImageView>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/img_2">

    </ImageView>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img4"
        app:layout_constraintTop_toTopOf="@id/guide_h_1"
        app:layout_constraintLeft_toRightOf="@id/guide_v_1"
        android:src="@mipmap/ic_launcher">

    </ImageView>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@id/guide_h_1"
        app:layout_constraintLeft_toLeftOf="@id/guide_v_3"
        android:id="@+id/img5"
        android:src="@mipmap/ic_launcher">

    </ImageView>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/img6"
       app:layout_constraintTop_toTopOf="@id/guide_h_3"
        app:layout_constraintLeft_toRightOf="@id/guide_v_5"
        android:src="@drawable/img_3"
        android:background="@color/material_dynamic_primary30">

    </ImageView>
    <Switch
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/purple_500"
        android:id="@+id/swbar"
        app:layout_constraintTop_toTopOf="@id/guide_h_4"
        app:layout_constraintRight_toLeftOf="@id/guide_v_6"
        android:text="@string/one_way"
        android:textSize="22sp"
        android:textColor="@color/white">

    </Switch>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtraveller"
        android:text="@string/traveller"
        app:layout_constraintLeft_toRightOf="@id/guide_v_1"
        app:layout_constraintTop_toTopOf="@id/guide_h_2"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:textSize="25sp">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>